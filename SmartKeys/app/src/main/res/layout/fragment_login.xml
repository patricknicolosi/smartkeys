<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/transparent"
    tools:context=".fragments.LoginFragment">

        <TextView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/icon_logo"
            android:drawableTint="@color/white"
            android:fontFamily="@font/montserrat_bold"
            android:text="SmartKeys "
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/pageTitleLoginTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.948"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.41" />

        <TextView
            android:id="@+id/pageTitleLoginTextView"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Login"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.053"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.084" />

        <TextView
            android:id="@+id/pageSubtitleLoginTextView"
            android:layout_width="370dp"
            android:layout_height="33dp"
            android:fontFamily="@font/montserrat"
            android:text="Login in your SmartKeys account"
            android:textColor="@color/white"
            android:textCursorDrawable="@null"
            app:layout_constraintBottom_toTopOf="@+id/emailLoginEditText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.414"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pageTitleLoginTextView"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/emailLoginEditText"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:background="@drawable/rounded_shape"
            android:backgroundTint="@color/light_gray"
            android:drawableRight="@drawable/icon_baseline_alternate_email"
            android:drawableTint="@color/edit_text_content_color"
            android:fontFamily="@font/montserrat"
            android:hint="Insert your email"
            android:inputType="textEmailAddress"
            android:padding="20dp"
            android:textColor="@color/white"
            android:textColorHint="@color/edit_text_content_color"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pageTitleLoginTextView"
            app:layout_constraintVertical_bias="0.088" />

        <EditText
            android:id="@+id/passwordLoginEditText"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:background="@drawable/rounded_shape"
            android:backgroundTint="@color/light_gray"
            android:drawableRight="@drawable/icon_baseline_lock_open"
            android:drawableTint="@color/edit_text_content_color"
            android:fontFamily="@font/montserrat"
            android:hint="Insert your password"
            android:inputType="textPassword"
            android:padding="20dp"
            android:textColor="@color/white"
            android:textColorHint="@color/edit_text_content_color"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/emailLoginEditText"
            app:layout_constraintVertical_bias="0.032" />

        <Button
            android:id="@+id/loginButton"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_shape"
            android:backgroundTint="@color/salmon"
            android:fontFamily="@font/montserrat_bold"
            android:text="Login"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/passwordLoginEditText"
            app:layout_constraintVertical_bias="0.051" />


        <View
            android:id="@+id/divider"
            android:layout_width="300dp"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider"
            android:backgroundTint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loginButton"
            app:layout_constraintVertical_bias="0.054" />

        <Button
            android:id="@+id/dontHaveAnAccountButton"
            android:layout_width="350dp"
            android:layout_height="48dp"
            android:background="@drawable/rounded_shape"
            android:backgroundTint="@color/black_blue"
            android:drawableTint="@color/white"
            android:fontFamily="@font/montserrat"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Don't have an account? Signup"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            app:layout_constraintVertical_bias="0.062" />


</androidx.constraintlayout.widget.ConstraintLayout>